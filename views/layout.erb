<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <script type="text/javascript" src="/vendor/jquery.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps:400,700' rel='stylesheet' type='text/css'>


    <link rel="stylesheet" href="/normalize.css">
    <link rel="stylesheet" href="/foundation.css">
    <link rel="stylesheet" href="/vendor/reveal.css">

    <script type="text/javascript" src="/vendor/custom.modernizr.js"></script>
    <script type="text/javascript" src="/vendor/zepto.js"></script>
    <script type="text/javascript" src="/foundation.min.js"></script>
    <script type="text/javascript" src="/vendor/jquery.reveal.js"></script>

    <title>Get LuckyPots</title>
  </head>
    <body>
      <nav class="top-bar">
        <ul class="title-area">
          <!-- Title Area -->
          <li class="name">
            <h1 class="luckypot"><a href="/">Get LuckyPots </a></h1>
          </li>
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        </ul>
        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li class="active"><a href="/potlucks">Potlucks</a></li>
            <li class="divider"></li>
            <li><a href="/admin">Admin</a></li>
            <li class="divider"></li>
          </ul>
        </section>
      </nav>

      <div class="row">
        <div class="large-12 columns">

          <%= yield %>


       <div id="itemModal" class="reveal-modal" data-reveal-ajax="/new_potluck">


      </div>



      <script>
      $(document).ready(
        $("#modal").click(function(){
          $('#itemModal').foundation('reveal', 'open', '/new_potluck');
        }
          ))
      $(document).ready(
        $("#closemodal").click(function() {
          $('#itemModal').foundation('reveal', 'close', '/new_potluck');
        })
        )
      </script>
    </body>
</html>